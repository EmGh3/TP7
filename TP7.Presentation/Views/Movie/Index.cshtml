@model IEnumerable<TP7.Domain.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                <a asp-action="AverageRating" asp-route-id="@item.Id">Rating</a> |
                    <a asp-action="Create" asp-controller="Review" asp-route-movieId="@item.Id">Review</a> |
                    <a asp-action="AddMovieToClient" asp-route-movieId="@item.Id">Add to favourites</a>


            </td>
        </tr>
}
    </tbody>
</table>
